{
    "name": "respinar/contao-products",
    "description": "Products catalog for Contao",
    "keywords": ["contao", "product", "catalog"],
    "type": "contao-module",
    "homepage": "https://github.com/respinar/contao-products",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Hamid Abbaszadeh",
            "email": "info@respinar.com",
            "homepage": "http://respinar.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/respinar/contao-products/issues"
    },
    "require": {
       "php":">=5.4",
        "contao/core-bundle":"~3.5 || ~4.1",
        "contao-community-alliance/composer-plugin":"^2.4.1 || ~3.0",
        "terminal42/contao-changelanguage": "~3.0"
    },
    "autoload": {
        "psr-0": {
            "Respinar\\Products\\": "library/"
        }
    },
    "extra": {
        "contao": {
            "sources": {
                "": "system/modules/products"
            },
            "transifex": {
                "project": "contao-products",
                "prefix": "master-",
                "languages_cto": "languages",
                "languages_tx": ".tx"
            }
        }
    }
}